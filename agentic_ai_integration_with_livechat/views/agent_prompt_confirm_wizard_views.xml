<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- NEW Prompt Confirmation Wizard -->
        <record id="view_agentic_ai_prompt_confirm_wizard_form" model="ir.ui.view">
            <field name="name">agentic.ai.prompt.confirm.wizard.form</field>
            <field name="model">agentic.ai.prompt.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Prompt Sync">
                    <field name="prompt_template_id" invisible="1"/>
                    <field name="sync_all" invisible="1"/>
                    
                    <div class="alert alert-warning">
                        <h4><i class="fa fa-warning"></i> Warning!</h4>
                        <field name="message" nolabel="1"/>
                        <p><strong>This action cannot be undone!</strong></p>
                    </div>
                    
                    <footer>
                        <button name="action_confirm" string="YES, SYNC AND OVERWRITE" type="object" class="btn-danger btn-lg"/>
                        <button name="action_cancel" string="CANCEL" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
