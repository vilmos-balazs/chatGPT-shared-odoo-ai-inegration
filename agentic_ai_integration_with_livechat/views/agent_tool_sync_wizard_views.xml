<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sync Confirmation Wizard -->
        <record id="view_agentic_ai_tool_sync_wizard_form" model="ir.ui.view">
            <field name="name">agentic.ai.tool.sync.wizard.form</field>
            <field name="model">agentic.ai.tool.sync.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Sync from Python Registry">
                    <field name="sync_type" invisible="1"/>
                    <field name="tool_metadata_id" invisible="1"/>
                    
                    <field name="message" nolabel="1" widget="html"/>
                    
                    <footer>
                        <button name="action_confirm_sync" string="Yes, Sync and Overwrite" type="object" class="btn-danger"/>
                        <button name="action_cancel_sync" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
