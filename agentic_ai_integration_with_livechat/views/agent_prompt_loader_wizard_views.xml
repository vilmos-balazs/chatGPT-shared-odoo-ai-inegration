<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Prompt Loader Wizard -->
        <record id="view_agentic_ai_prompt_loader_wizard_form" model="ir.ui.view">
            <field name="name">agentic.ai.prompt.loader.wizard.form</field>
            <field name="model">agentic.ai.prompt.loader.wizard</field>
            <field name="arch" type="xml">
                <form string="Load New Prompts from Python">
                    <field name="message" nolabel="1" widget="html"/>
                    
                    <footer>
                        <button name="action_load_new_prompts" string="🔍 Load New Prompts" type="object" class="btn-success btn-lg"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for the wizard -->
        <record id="action_agentic_ai_prompt_loader_wizard" model="ir.actions.act_window">
            <field name="name">Load New Prompts</field>
            <field name="res_model">agentic.ai.prompt.loader.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
